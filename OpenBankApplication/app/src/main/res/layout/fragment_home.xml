<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.swe443.openbankapp.HomeFrag">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/accountText"
            android:paddingLeft="20dp"
            android:text="Accounts"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:layout_below="@id/accountText"
            android:id="@+id/accounts"
            android:background="#ffffff"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/transactionText"
            android:layout_below="@id/accounts"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:text="Recent Transactions"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:layout_below="@id/transactionText"
            android:id="@+id/transactions"
            android:background="#ffffff"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="200dp"/>

        <ImageButton
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_action_transfer"
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</RelativeLayout>
