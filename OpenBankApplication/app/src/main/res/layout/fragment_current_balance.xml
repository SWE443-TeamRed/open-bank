<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/SavingsPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account Details"
            android:textColor="@color/colorAccent"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/savingsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Balance:"
            android:layout_below="@+id/SavingsPage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="43dp"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/savingsBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/savingsText"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp"
            android:text="$0.00"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/accountNumber_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Number:"
            android:textSize="20sp"
            android:layout_below="@+id/savingsBalance"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/savingsAccountNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx-xx-xxxx"
            android:textSize="15dp"
            android:layout_below="@+id/accountNumber_txt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/creationDate_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creation Date:"
            android:textSize="20sp"
            android:layout_below="@+id/savingsAccountNumber"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/savingsCreationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04/01/2017"
            android:layout_below="@+id/creationDate_txt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/current_transaction_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Translactions"
            android:textSize="20dp"
            android:layout_below="@+id/savingsCreationDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="19dp" />

        <ListView
            android:id="@+id/checkingTransactionList"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:divider="@color/colorAccent"
            android:dividerHeight="1dp"
            android:padding="10dp"
            android:layout_below="@+id/current_transaction_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</LinearLayout>