<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/account_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="Account Details"
            android:textColor="@color/colorAccent"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/savingsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/account_text"
            android:layout_marginTop="43dp"
            android:text="Current Balance:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/savingsBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/savingsText"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp"
            android:text="$0.00"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/accountNumber_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Number:"
            android:textSize="20sp"
            android:layout_below="@+id/savingsBalance"
            android:layout_marginTop="46dp" />

        <TextView
            android:id="@+id/savingsAccountNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/accountNumber_txt"
            android:text="xxxx-xx-xxxx"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/creationDate_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creation Date:"
            android:textSize="20sp"
            android:layout_below="@+id/savingsAccountNumber"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="72dp" />

        <TextView
            android:id="@+id/savingsCreationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/creationDate_txt"
            android:layout_marginTop="10dp"
            android:text="04/01/2017"
            android:textSize="15dp" />

    </RelativeLayout>
</LinearLayout>