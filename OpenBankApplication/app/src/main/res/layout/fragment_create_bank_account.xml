<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.swe443.openbankapp.TransferFrag">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_below="@id/toolbar"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </RelativeLayout>

    <TextView
        android:id="@+id/transfer_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open an account with us!"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:layout_alignTop="@+id/content"
        android:layout_alignLeft="@+id/content"
        android:layout_alignStart="@+id/content"
        android:layout_marginTop="22dp"
        android:layout_alignRight="@+id/content"
        android:layout_alignEnd="@+id/content" />

    <LinearLayout
        android:id="@+id/createAccountFormLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/transfer_txt"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/transfer_txt"
        android:layout_toRightOf="@+id/transfer_txt"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/textLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/transfer_txt"
            android:layout_toEndOf="@+id/transfer_txt"
            android:layout_toRightOf="@+id/transfer_txt"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/namOfUserTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="end"
                    android:layout_marginTop="17dp"
                    android:text="Your Name"
                    android:textAlignment="textEnd"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/phoneTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="end"
                    android:layout_marginTop="17dp"
                    android:text="Phone"
                    android:textAlignment="textEnd"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/emailTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="end"
                    android:layout_marginTop="17dp"
                    android:text="Email"
                    android:textAlignment="textEnd"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/adminTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="end"
                    android:layout_marginTop="17dp"
                    android:text="Admin Account"
                    android:textAlignment="textEnd"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/usernameTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="end"
                    android:layout_marginTop="17dp"
                    android:text="username"
                    android:textAlignment="textEnd"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/passwordTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="end"
                    android:layout_marginTop="17dp"
                    android:text="Password"
                    android:textAlignment="textEnd"

                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/confirmPasswordTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="end"
                    android:layout_marginTop="17dp"
                    android:text="Confirm Password"
                    android:textAlignment="textEnd"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/initialAccountTypeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="end"
                    android:layout_marginTop="17dp"
                    android:text="First Account"
                    android:textAlignment="textEnd"

                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/initalBalanceTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="end"
                    android:layout_marginTop="17dp"
                    android:text="Initial Balance"
                    android:textAlignment="textEnd"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/inputLayout"
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="vertical"
                android:weightSum="1">

                <EditText
                    android:id="@+id/nameOfUserInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.04"
                    android:ems="10"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/phoneInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:ems="10"
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/emailInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:ems="10"
                    android:inputType="text" />

                <CheckBox
                    android:id="@+id/adminCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/transfer_txt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:text="Admin Account?" />

                <EditText
                    android:id="@+id/usernameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:ems="10"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/passwordInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:ems="10"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/confirmPasswordInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:ems="10"
                    android:inputType="text" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:entries="@array/country_arrays"
                    android:prompt="@string/country_prompt" />

                <EditText
                    android:id="@+id/initialBalanceInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:ems="10"
                    android:inputType="numberDecimal" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/transfer_txt"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="65dp"
            android:layout_toEndOf="@+id/transfer_txt"
            android:layout_toRightOf="@+id/transfer_txt"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10">


            <Button
                android:id="@+id/cancelCreateAccount"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#0b3c5d"
                android:text="Cancel" />

            <Button
                android:id="@+id/confirmCreateAccount"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:background="#0b3c5d"
                android:text="Open Account!" />
        </LinearLayout>


    </LinearLayout>





</RelativeLayout>
