<?xml version="1.0" encoding="utf-8"?>
 <ScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="wrap_content"
     android:id="@+id/scrollView"
     android:layout_height="match_parent">

     <LinearLayout
         android:id="@+id/content"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_below="@id/toolbar"
         android:layout_marginBottom="0dp"
         android:layout_marginLeft="30dp"
         android:layout_marginRight="30dp"
         android:layout_marginTop="15dp"
         android:orientation="vertical">

         <TextView
             android:id="@+id/transfer_text"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"

             android:layout_marginTop="20dp"
             android:text="Update My Information"
             android:textColor="@color/colorAccent"
             android:textSize="35sp" />

         <TextView
             android:id="@+id/first_name_txt"
             android:layout_width="match_parent"
             android:layout_height="30dp"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true"
             android:layout_below="@+id/transfer_text"
             android:ems="10"
             android:text="Name:"
             android:textSize="20sp" />

         <AutoCompleteTextView
             android:id="@+id/first_name"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true"
             android:layout_below="@+id/first_name_txt"
             android:ems="10"
             android:hint="first name"
             android:inputType="textPersonName"
             android:textSize="15sp" />

         <TextView
             android:id="@+id/email_txt"
             android:layout_width="match_parent"
             android:layout_height="35dp"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true"
             android:layout_below="@+id/first_name"
             android:ems="10"
             android:text="Email:"
             android:textSize="20sp" />

         <AutoCompleteTextView
             android:id="@+id/user_email"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true"
             android:layout_below="@+id/email_txt"
             android:ems="10"
             android:hint="email"
             android:inputType="textPersonName"
             android:textSize="15sp" />

         <TextView
             android:id="@+id/phone_number_txt"
             android:layout_width="match_parent"
             android:layout_height="35dp"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true"
             android:layout_below="@+id/user_email"
             android:ems="10"
             android:text="Phone Number:"
             android:textSize="20sp" />

         <AutoCompleteTextView
             android:id="@+id/phone_number"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true"
             android:layout_below="@+id/phone_number_txt"
             android:ems="10"
             android:hint="phone number"
             android:inputType="phone"
             android:textSize="15sp" />

         <TextView
             android:id="@+id/username_txt"
             android:layout_width="match_parent"
             android:layout_height="35dp"
             android:layout_above="@+id/password"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true"
             android:layout_below="@id/phone_number"
             android:ems="10"
             android:text="username:"
             android:textSize="20sp" />

         <AutoCompleteTextView
             android:id="@+id/user_username"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true"
             android:layout_below="@+id/password_txt"
             android:ems="10"
             android:hint="**********"
             android:inputType="phone"
             android:textSize="15sp" />
         <TextView
             android:id="@+id/password_txt"
             android:layout_width="match_parent"
             android:layout_height="35dp"
             android:layout_above="@+id/password"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true"
             android:layout_below="@id/phone_number"
             android:ems="10"
             android:text="Password:"
             android:textSize="20sp" />

         <AutoCompleteTextView
             android:id="@+id/user_password"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true"
             android:layout_below="@+id/password_txt"
             android:ems="10"
             android:hint="**********"
             android:inputType="phone"
             android:textSize="15sp" />

         <Button
             android:id="@+id/submit_users_info"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/colorSecondaryDark"
             android:text="Save" />


     </LinearLayout>

 </ScrollView>

