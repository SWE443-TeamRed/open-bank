<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.swe443.openbankapp.SignUpFrag4">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/content"
                android:layout_below="@id/toolbar"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:layout_margin="20dp"
                android:id="@+id/contactText"
                android:text="Agree to Terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="30sp" />

            <WebView
                android:id="@+id/agreements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text=""
                android:layout_below="@+id/contactText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="13dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical|left"
                android:gravity="center"
                android:background="@color/colorPrimaryDark"
                />

                <CheckBox
                    android:id="@+id/checkBox_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agree"
                    android:layout_below="@+id/agreements"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp" />

                <Button
                    android:id="@+id/back_button4_4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="#0b3c5d"
                    android:text="Back"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/checkBox_agree"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="20dp"
                    />

                <Button
                    android:id="@+id/continue_button4_4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="#0b3c5d"
                    android:text="Continue"
                    android:layout_alignBaseline="@+id/back_button4_4"
                    android:layout_alignBottom="@+id/back_button4_4"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="20dp"/>
            </RelativeLayout>
        </ScrollView>
</RelativeLayout>